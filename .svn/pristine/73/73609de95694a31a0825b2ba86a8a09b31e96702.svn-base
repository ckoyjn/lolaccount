		(#{cityId},#{count},#{type},#{name},#{recordTime},#{smartcardid})
	</insert> -->
	<!-- uploadUserAccessData -->

	<!-- uploadMoviePlayData -->
	<insert id="uploadMoviePlayData" parameterType="net.sf.json.JSONObject">
		insert into
		movie_play_data (cityId,count,movieId,movieName,recordTime,smartcardid) values
		(#{cityId},#{count},#{movieId},#{movieName},#{recordTime},#{smartcardid})
	</insert>
	<!-- uploadMoviePlayData -->

	<select id="selectUserOrder" parameterType="net.sf.json.JSONObject"
		resultType="map">
				<![CDATA[
				SELECT
				    m.Identify identify,
				    m.id id,
				    m.`Name` name,
				    MAX(expiredate) expiredate
				FROM
				    epg_auth_movie t
				RIGHT JOIN movie m ON t.movieid = m.id
				WHERE
				    userId = #{smartcardid}
				GROUP BY
				    m.id
				ORDER BY
				    expiredate DESC;
				]]>
	</select>


	<select id="findUserOrderCount" parameterType="net.sf.json.JSONObject"
		resultType="int">
		SELECT
		count(
		DISTINCT m.Identify,
		m.id,
		m.`Name`
		)
		FROM
		trxnlog t
		RIGHT JOIN movie m ON t.MediaID = m.MediaID
		WHERE
		userId =#{smartcardid}
	</select>
</mapper>